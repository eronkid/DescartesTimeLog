@model TimeLog.Web.Models.TimeLogViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Time Logger</h1>
<h4>Active Employees</h4>
<table id="active-employees" class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                First name
            </th>
            <th>
                Middle name
            </th>
            <th>
                Last name
            </th>
            <th>
                Time in
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.EmployeeTimeIns) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @item.TimeIn
            </td>
            <td>
                <button class="btn btn-warning">Time out</button>
            </td>
        </tr>
}
    </tbody>
</table>
<h4>Employees</h4>
<table id="absent-employees" class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                First name
            </th>
            <th>
                Middle name
            </th>
            <th>
                Last name
            </th>
            <th>
                Time out
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.EmployeeTimeOuts) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @item.TimeOut
            </td>
            <td>
                <button class="btn btn-success">Time in</button>
            </td>
        </tr>
}
    </tbody>
</table>
